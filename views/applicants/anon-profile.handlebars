<div class = "container">

	<div class="row">
		<div class = "col-md-10">
			<h1>{{data.username}}</h1>
		</div>
		<div class = "col-md-2">

			<button recipient-id="{{data.id}}" is-anonymous="true" convo-title = " reached out to {{data.username}}" class="start-convo start-convo-anon btn btn-large btn-default">Start A Conversation</button>

		</div>


	</div>

<!-- 	<div class="row">  -->

		{{#each section_creds}}

		<div class = "row section-title">
			<h2>{{section_name}}</h2>
		</div>

		<div class = "row credential-tiles-container">
			
			{{#each creds}}

			<div class = "col-md-3 credential-tile" id="ct{{id}}">
				<h3>{{heading}}</h3>
				<h5>{{subheading}}</h5>

				<div type="button" data-toggle="modal" data-target="#credModalApplicant{{id}}">
				
				<span class="corner-icon glyphicon glyphicon-resize-full"></span>
				</div>
			</div>

			{{/each}}
		</div>
		{{/each}}
	<!-- </div> -->
</div>
	
{{#each section_creds}}
	{{#each creds}}
		<div id="credModalApplicant{{id}}" class="modal fade" role="dialog">

		  <div class="modal-dialog">

		    <!-- Modal content-->
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal">&times;</button>
						<h3>{{heading}}</h3>
						<h4>{{subheading}}</h4>
			   </div>
			   <div class="modal-body">
			   {{#if details}}
			      {{{findLineBreaks details}}}
			   {{/if}}
			   </div>
			

		    <div class="modal-footer">
		        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		      	</form>
		    </div>
			</div>
		  </div>

		</div>
	{{/each}}
{{/each}}


